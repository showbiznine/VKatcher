                </Core:EventTriggerBehavior>
                <Core:EventTriggerBehavior EventName="Holding">
                    <Core:InvokeCommandAction Command="{Binding DataContext.SongHoldingCommand, ElementName=pageRoot}" CommandParameter="{Binding ElementName=grdRoot}" />
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="GroupListTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0"
                        Margin="0,4"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Ellipse Width="40"
                         Height="40"
                         VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding photo_200}" Stretch="Fill" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="{Binding name}" />
            </StackPanel>
            <Button Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding DataContext.UnsubscribeCommand, ElementName=pageRoot}"
                    CommandParameter="{Binding}"
                    Content="&#xE10A;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="#FFF22613" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="TagListTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0"
                        Margin="0,4"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="{Binding tag}">
                    <TextBlock.Inlines>
                        <Run Text="#" />
                        <Run Text="{Binding tag}" />
                        <Run Text="@" />
                        <Run Text="{Binding domain}" />
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
            <Button Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding DataContext.UnsubscribeCommand, ElementName=pageRoot}"
                    CommandParameter="{Binding}"
                    Content="&#xE10A;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="#FFF22613" />
        </Grid>
    </DataTemplate>

